extends layout

block content
    h1 Administrador
    form(action="/administrador", method="post")
        h2 Manejo restaurantes
        div(style="overflow-y: scroll; height:200px;", name="restaurantes")
            table(style="width:100%", name="restaurantesTable")
                thead
                tr
                    th Id
                    th Restaurant
                    th Latitude pos
                    th Longitude pos
                    th Score
                    th Food type
                    th Open
                    th Close
                    th Price
                    th CÃ³digo distrito
                tbody
                each restaurant, index in restaurants
                    tr
                        td #{restaurant.idrestaurant}
                        td
                            div
                                input(type="text", name="name", value="#{restaurant.name}", size="10px")
                        td
                            div
                                input(type="text", name="latitudepos", value="#{restaurant.latitudepos}", size="10px")
                        td
                            div
                                input(type="text", name="longitudepos", value="#{restaurant.longitudepos}", size="10px")
                        td #{restaurant.realscore ? restaurant.realscore : 'null'}
                        td
                            div
                                input(type="text", name="foodtype", value="#{restaurant.foodtype}", size="10px")
                        td
                            div
                                input(type="text", name="open", value="#{restaurant.open}", size="10px")
                        td
                            div
                                input(type="text", name="close", value="#{restaurant.close}", size="10px")
                        td
                            div
                                input(type="text", name="price", value="#{restaurant.price}", size="10px")
                        td
                            div
                                input(type="text", name="distrito", value="#{restaurant.codigodistrito}", size="10px")
                        td
                            div
                                input(type="submit", formaction="/administrador/modificar/#{index}/#{restaurant.idrestaurant}", value="M")
                        td
                            div
                                input(type="submit", formaction="/administrador/eliminar/#{restaurant.idrestaurant}", value="X")
        input(type="submit", value="Insertar restaurante", formaction="/administrador/insertar")
    h2 Vista usuarios
    div(style="overflow-y: scroll; height:200px;")
        table(style="width:100%")
            thead
            tr
                th IdUser
                th Username
                th Password
                th Type
                th Email
            tbody
            each user in users
                tr
                    td #{user.iduser}
                    td #{user.username}
                    td #{user.password}
                    td #{user.type}
                    td #{user.email}